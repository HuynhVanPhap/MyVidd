<%- include("layouts/header") %>
    <%
        const email = (typeof form != 'undefined' && form?.email != '') ? form.email : '';
    %>

    <div class="container">
        <div class="row my-4">
            <div class="col-md-12">
                <h1>Login</h1>

                <div class="alert-login" role="alert"></div>

                <form id="login-form">
                    <div class="form-group" data-field='email'>
                        <label for="email">Email</label>
                        <input type="text" name="email" class="form-control">
                        <% if (typeof errors !== 'undefined' && errors?.email?.msg != "") { %>
                            <div class="error invalid-feedback" style="display: inline;">
                                <%= errors?.email?.msg %>
                            </div>
                        <% } %>
                    </div>
                    <div class="form-group" data-field='password'>
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
<%- include("layouts/footer") %>