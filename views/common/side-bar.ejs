<div class="row">
    <div class="col-md-12">
        <div class="card my-4">
            <h5 class="card-header">Tags</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="list-unstyled mb-0">
                            <%
                                const tags = video.tags.split(',');
                                tags.forEach(tag => {
                            %>
                                <li>
                                    <a href="/video/search/tags/<%= tag %>"><%= '#'+tag %></a>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <% if (playlist.length > 0) { %>
            <div class="card my-4">
                <h5 class="card-header">Playlist</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="list-unstyled mb-0">
                                <% playlist.forEach(item => { %>
                                    <% if (item.watch == video.watch) { %> 
                                        <li style="background: lightgray;">
                                    <% } else { %>
                                        <li>
                                    <% } %>
                                            <img src="<%= baseUrl + video.thumbnail %>" class="img-fluid">
                                            <h3>
                                                <a href="/video/playlist/<%= playlistId %>/<%= video.watch %>"><%= video.title %></a>
                                            </h3>
                                        </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <div class="col-md-12">
        <%- include('related-videos') %>
    </div>
</div>