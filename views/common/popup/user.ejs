<div class="popup popup-user-wrap dropdown-menu" aria-labelledby="userPopUp" id="popup-user">
    <div class="popup-container">
        <div class="popup-title-user">
            <div class="row">
                <div class="col-sm-8 three-dot" style="font-size: 15px; font-weight: 700;">
                    <%= auth.name %>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 three-dot" style="font-size: 10px;">
                    <%= auth.email %>
                </div>
            </div>
        </div>
        <div class="popup-content-container">
            <a href="/setting" class="user-option nav-link">
                <div class="row">
                    <div class="col-sm-2" style="padding-top: 3px;">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="col-sm-10 no-padding">
                        Tài khoản
                    </div>
                </div>
            </a>

            <a href="/logout" class="user-option nav-link">
                <div class="row">
                    <div class="col-sm-2" style="padding-top: 3px;">
                        <i class="fas fa-sign-out-alt"></i>
                    </div>
                    <div class="col-sm-10 no-padding">
                        Logout
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>